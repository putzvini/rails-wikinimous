<div class="container m-5">
  <div class="card">
    <h5 class="card-header"><%= @article.title %></h5>
    <div class="card-body">
      <p class="card-text"><%= @article.content %></p>
      <div class="d-flex justify-content-end">
        <button class="btn btn-outline-primary m-2"><%= link_to "edit", edit_article_path(@article) %></button>
        <button class="btn btn-outline-primary m-2"><%= link_to "delete", edit_article_path(@article) %></button>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <%= link_to "Back to list", articles_index_path %>
  </div>
</div>
